<!-- First Section -->
<div class="Section">
    <form action="/input/addProduct">
        <h5>Add product</h5>
        <input type="text" name="productTitle" placeholder="Title">
        <input type="text" name="productImg" placeholder="Img">
        <button type="submit"> Create </button>
    </form>
    <form action="/input/deleteFilm" method="POST">
        <h5>Delete film</h5>
        <input type="text" name="productDelele" placeholder="Title">
        <button type="submit"> Delete </button>
    </form>
</div>
